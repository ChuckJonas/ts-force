{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "listFiles": false,
    "traceResolution": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["es6", "DOM"],
    "types": ["node", "mocha"],
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "test/**/*.spec.ts"],
  "exclude": ["node_modules/**"]
}
